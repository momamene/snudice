<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap>
	<select id='countUserWithPassword' parameterClass='beans.UserInfo' resultClass='int'>SELECT count(*) FROM d_user where userId=#userId# and password=#password#</select>
	<select id='countUser' parameterClass='String' resultClass='int'>SELECT count(*) FROM d_user where userId=#userId#</select>
	<insert id="insertUser" parameterClass="beans.UserInfo">INSERT INTO d_user VALUES(#userId:VARCHAR#,#password:VARCHAR#)</insert>
</sqlMap>
