<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <welcome-file-list>
    <welcome-file>first.do</welcome-file>
  </welcome-file-list>
  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/secureLoginForm.jsp</form-login-page>
      <form-error-page>/loginFailed.jsp</form-error-page>
    </form-login-config>
  </login-config>
  
  <security-role><role-name>admin</role-name></security-role>
  <security-role><role-name>manager</role-name></security-role>
  <security-role><role-name>member</role-name></security-role>
  <security-role><role-name>guest</role-name></security-role>  
  
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>https</web-resource-name>
      <url-pattern>*.do</url-pattern>      
    </web-resource-collection>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <security-constraint>
    <display-name>JSP Protection</display-name>
    <web-resource-collection>
      <web-resource-name>SecureJSPPages</web-resource-name>
      <url-pattern>*.jsp</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
    </web-resource-collection>
    <auth-constraint/>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>관리자페이지</web-resource-name>
      <url-pattern>/admin/*</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>게시판,AJAX</web-resource-name>
      <url-pattern>/board/*</url-pattern>
      <url-pattern>*.ajax</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
      <role-name>manager</role-name>
      <role-name>member</role-name>
      <role-name>guest</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
   <security-constraint>
    <web-resource-collection>
      <web-resource-name>게시판,AJAX</web-resource-name>
      <url-pattern>/testAjax.ajax</url-pattern>
      <url-pattern>/login.ajax</url-pattern>
      <url-pattern>/join.ajax</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
    </web-resource-collection>   
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <servlet>
    <servlet-name>adminInternalName</servlet-name>
    <servlet-class>servletAdmin.AdminMain</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>adminInternalName</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>adminTestInternalName</servlet-name>
    <servlet-class>servletAdmin.AdminTest</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>adminTestInternalName</servlet-name>
    <url-pattern>/admin/test.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>articleWriteInternalName</servlet-name>
    <servlet-class>servletBoard.ArticleWrite</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>articleWriteInternalName</servlet-name>
    <url-pattern>/board/articleWrite.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>articleListInternalName</servlet-name>
    <servlet-class>servletBoard.ArticleList</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>articleListInternalName</servlet-name>
    <url-pattern>/board/articleList.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>articleViewInternalName</servlet-name>
    <servlet-class>servletBoard.ArticleView</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>articleViewInternalName</servlet-name>
    <url-pattern>/board/articleView.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>articleModifyInternalName</servlet-name>
    <servlet-class>servletBoard.ArticleModify</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>articleModifyInternalName</servlet-name>
    <url-pattern>/board/articleModify.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>articleModifyCompleteInternalName</servlet-name>
    <servlet-class>servletBoard.ArticleModifyComplete</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>articleModifyCompleteInternalName</servlet-name>
    <url-pattern>/board/articleModifyComplete.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>firstPage</servlet-name>
    <servlet-class>servletAccount.FirstPage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>firstPage</servlet-name>
    <url-pattern>/first.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>logoutInternalName</servlet-name>
    <servlet-class>servletAccount.LogOut</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logoutInternalName</servlet-name>
    <url-pattern>/logout.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>articleWriteFormInternalName</servlet-name>
    <servlet-class>servletBoard.ArticleWriteForm</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>articleWriteFormInternalName</servlet-name>
    <url-pattern>/board/articleWriteForm.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>articleSearch</servlet-name>
    <servlet-class>servletBoard.ArticleSearch</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>articleSearch</servlet-name>
    <url-pattern>/board/articleSearch.do</url-pattern>
  </servlet-mapping>  
  
  <servlet>
    <servlet-name>testAjax</servlet-name>
    <servlet-class>ajax.TestAjax</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>testAjax</servlet-name>
    <url-pattern>/testAjax.ajax</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>replyWrite</servlet-name>
    <servlet-class>ajax.ReplyWrite</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>replyWrite</servlet-name>
    <url-pattern>/board/replyWrite.ajax</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>boardDelete</servlet-name>
    <servlet-class>ajax.BoardDelete</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>boardDelete</servlet-name>
    <url-pattern>/admin/boardDelete.ajax</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>join</servlet-name>
    <servlet-class>ajax.Join</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>join</servlet-name>
    <url-pattern>/join.ajax</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>ajax.Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login.ajax</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>articleDelete</servlet-name>
    <servlet-class>ajax.ArticleDelete</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>articleDelete</servlet-name>
    <url-pattern>/board/articleDelete.ajax</url-pattern>
  </servlet-mapping> 
 
  <filter>
  	<filter-name>allRequestFilter</filter-name>
  	<filter-class>filter.AllRequestFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>allRequestFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>  
  
  <filter>
  	<filter-name>boardFilter</filter-name>
  	<filter-class>filter.BoardFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>boardFilter</filter-name>
  	<url-pattern>/board/*</url-pattern>
  </filter-mapping>

</web-app>